// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  INACTIVE
  ACTIVE
}

enum Gender {
  MALE
  FEMALE
  TBD
}

model User {
  id              String      @id @default(uuid()) @db.VarChar(36)
  firstName       String      @map("first_name") @db.VarChar(50)
  lastName        String      @map("last_name") @db.VarChar(50)
  address         String      @db.VarChar(50)
  dateOfBirth     DateTime    @map("date_of_birth") @db.Date()
  email           String      @unique @db.VarChar(50)
  isEmailVerified Boolean     @map("is_email_verified")
  phone           String      @db.Char(10)
  gender          Gender      @default(TBD)
  status          Status      @default(INACTIVE)
  roles           Role[]
  User_Role       User_Role[]
}

model Role {
  id        Int         @id @default(autoincrement()) @db.Int()
  name      String      @db.VarChar(6)
  users     User[]
  User_Role User_Role[]
}

model User_Role {
  userId String @db.VarChar(36) // relation scalar field (used in the `@relation` attribute above)
  roleId Int    @db.Int()

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}
